{
  "dashboard": {
    "title": "Synapse Core Metrics",
    "uid": "synapse-core",
    "version": 1,
    "timezone": "browser",
    "schemaVersion": 16,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Callback Rate",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(callbacks_received_total[5m])",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Requests/sec"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": false,
          "alignAsTable": false
        }
      },
      {
        "id": 2,
        "title": "Callback Status Distribution",
        "type": "piechart",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "callbacks_received_total",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "pieType": "pie",
        "legend": {
          "show": true,
          "values": true,
          "percentage": true
        }
      },
      {
        "id": 3,
        "title": "Transaction Processing Latency (Heatmap)",
        "type": "heatmap",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(transaction_processing_seconds_bucket[5m])",
            "format": "heatmap",
            "legendFormat": "{{le}}",
            "refId": "A"
          }
        ],
        "dataFormat": "tsbuckets",
        "yAxis": {
          "format": "s",
          "decimals": 3
        },
        "color": {
          "mode": "spectrum",
          "colorScheme": "interpolateSpectral"
        }
      },
      {
        "id": 4,
        "title": "Transaction Processing Percentiles",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(transaction_processing_seconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(transaction_processing_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(transaction_processing_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Duration"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "lines": true,
        "fill": 0,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "alignAsTable": true
        }
      },
      {
        "id": 5,
        "title": "Active Database Connections",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 16,
          "w": 24,
          "h": 8
        },
        "targets": [
          {
            "expr": "active_db_connections",
            "legendFormat": "connections",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Connections",
            "decimals": 0
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "max": true,
          "min": true,
          "alignAsTable": true
        }
      }
    ]
  }
}
